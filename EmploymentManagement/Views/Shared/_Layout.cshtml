@using EmploymentManagement.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    @*Bootstrap.css links*@
    <link href="~/lib/bootstrap/css/bootstrap.css.map"/>
    <link href="~/lib/bootstrap/css/bootstrap.min.css.map"/>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.css.map"/>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="index-navbar">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse lists" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-action="index" asp-controller="home" class="nav-link">List</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="create" asp-controller="home" class="nav-link">Create</a>
                    </li>
                </ul>
                <ul class="navbar-nav m-lg-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form method="post" asp-action="logout" asp-controller="account">
                                <button type="submit" class="nav-link btn btn-link py-0" style="width: auto;">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        </li>
                    }else{
                        <li class="nav-item">
                            <a asp-action="register" asp-controller="account" class="nav-link">Register</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="login" asp-controller="account" class="nav-link">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
        @*JQuery Links*@
        <script src="~/lib/jquery/jquery.min.map"></script>
        <script src="~/lib/jquery/jquery.slim.min.map"></script>
        <script src="~/lib/jquery/jquery.slim.js"></script>
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        @*Bootstrap.js Links*@
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.esm.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.esm.min.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js.map"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        @*<script src="~/lib/bootstrap/js/bootstrap.esm.min.js"></script>*@
        @*<script src="~/lib/bootstrap/js/bootstrap.esm.js"></script>*@
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        @if (IsSectionDefined("Scripts"))
        {
        @RenderSection("Scripts", required: true)
        }
    </div>
</body>
</html>
